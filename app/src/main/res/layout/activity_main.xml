<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/mainbackground"
    android:tileMode="repeat"
    tools:context=".MainActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/header_layout"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@drawable/rounded_background">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:src="@drawable/header"
            android:contentDescription="@string/header_image"
            android:scaleType="fitCenter"
            />

    </LinearLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:scrollbars="vertical"
        tools:ignore="ScrollViewCount"
        android:padding="15dp">

        <LinearLayout
            android:id="@+id/mainBody"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color3"
                    android:layout_margin="20dp"
                    android:textSize="15sp"
                    android:gravity="center"
                    android:padding="0dp"
                    android:text="@string/hello_welcome_back"
                    android:visibility="visible" />




            <!-- Pizza card -->
            <TextView
                android:id="@+id/pizzaCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:textSize="20sp"
                android:text="@string/pizza"
                />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">


                <LinearLayout
                    android:id="@+id/pizza_layout"
                    android:padding="10dp"
                    android:layout_marginBottom="20dp"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:id="@+id/margherita_pizza"
                        android:layout_marginEnd="5dp"
                        android:layout_width="130dp"
                        android:layout_height="150dp"
                        android:orientation="vertical"
                        android:background="@drawable/card">

                        <ImageView
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:layout_margin="5dp"
                            android:src="@drawable/margherita"
                            android:contentDescription="@string/margherita_pizza"
                            android:scaleType="centerCrop"
                            android:background="@drawable/rounded_corner"
                            android:clipToOutline="true"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textColor="@color/text_color3"
                            android:textAlignment="center"

                            android:text="@string/margherita"/>

                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/pepperoni_pizza"
                        android:layout_marginEnd="5dp"
                        android:layout_width="130dp"
                        android:layout_height="150dp"
                        android:orientation="vertical"
                        android:background="@drawable/card">

                        <ImageView
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:layout_margin="5dp"
                            android:src="@drawable/pepperoni"
                            android:contentDescription="@string/pepperoni_pizza1"
                            android:scaleType="centerCrop"
                            android:background="@drawable/rounded_corner"
                            android:clipToOutline="true"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textAlignment="center"
                            android:text="@string/pepperoni"/>

                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/quattro_formaggi"
                        android:layout_marginEnd="5dp"
                        android:layout_width="130dp"
                        android:layout_height="150dp"
                        android:orientation="vertical"
                        android:background="@drawable/card">

                        <ImageView
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:layout_margin="5dp"
                            android:src="@drawable/quattroformaggi"
                            android:contentDescription="@string/quattro_formaggi_pizza"
                            android:scaleType="centerCrop"
                            android:background="@drawable/rounded_corner"
                            android:clipToOutline="true"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textAlignment="center"
                            android:text="@string/quattro_formaggi"/>

                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/vegetariana"
                        android:layout_marginEnd="5dp"
                        android:layout_width="130dp"
                        android:layout_height="150dp"
                        android:orientation="vertical"
                        android:background="@drawable/card">

                        <ImageView
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:layout_margin="5dp"
                            android:src="@drawable/vegetariana"
                            android:contentDescription="@string/vegetariana_pizza"
                            android:scaleType="centerCrop"
                            android:background="@drawable/rounded_corner"
                            android:clipToOutline="true"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textAlignment="center"
                            android:text="@string/vegetariana"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/cheese"
                        android:layout_marginEnd="5dp"
                        android:layout_width="130dp"
                        android:layout_height="150dp"
                        android:orientation="vertical"
                        android:background="@drawable/card">

                        <ImageView
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:layout_margin="5dp"
                            android:src="@drawable/cheese"
                            android:contentDescription="@string/cheese_pizza"
                            android:scaleType="centerCrop"
                            android:background="@drawable/rounded_corner"
                            android:clipToOutline="true"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textAlignment="center"
                            android:text="@string/cheese"/>

                    </LinearLayout>

                </LinearLayout>
            </HorizontalScrollView>



            <!-- Pasta card -->
            <TextView
                android:id="@+id/pastaCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:layout_marginStart="20dp"
                android:text="@string/pasta"
                />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">


                <LinearLayout
                    android:id="@+id/pasta_layout"
                    android:padding="10dp"
                    android:layout_marginBottom="20dp"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/spaghetti_aglioo"
                        android:layout_marginEnd="5dp"
                        android:layout_width="130dp"
                        android:layout_height="150dp"
                        android:orientation="vertical"
                        android:background="@drawable/card">

                        <ImageView
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:layout_margin="5dp"
                            android:src="@drawable/spaghettiaglioeolio"
                            android:contentDescription="@string/spaghetti_aglio_e_olio"
                            android:scaleType="centerCrop"
                            android:background="@drawable/rounded_corner"
                            android:clipToOutline="true"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textAlignment="center"
                            android:text="@string/spaghetti_aglioo"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/cheese_raviolii"
                        android:layout_marginEnd="5dp"
                        android:layout_width="130dp"
                        android:layout_height="150dp"
                        android:orientation="vertical"
                        android:background="@drawable/card">

                        <ImageView
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:layout_margin="5dp"
                            android:src="@drawable/cheeseraviolial"
                            android:contentDescription="@string/cheese_ravioli_pasta"
                            android:scaleType="centerCrop"
                            android:background="@drawable/rounded_corner"
                            android:clipToOutline="true"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textAlignment="center"
                            android:text="@string/cheese_raviolii"/>

                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/fettuccine_alfredo"
                        android:layout_marginEnd="5dp"
                        android:layout_width="130dp"
                        android:layout_height="150dp"
                        android:orientation="vertical"
                        android:background="@drawable/card">

                        <ImageView
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:layout_margin="5dp"
                            android:src="@drawable/fettuccinealfredo"
                            android:contentDescription="@string/fettuccine_alfredo_pasta"
                            android:scaleType="centerCrop"
                            android:background="@drawable/rounded_corner"
                            android:clipToOutline="true"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textAlignment="center"
                            android:text="@string/fettuccine_alfredo"/>

                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/lasagna"
                        android:layout_marginEnd="5dp"
                        android:layout_width="130dp"
                        android:layout_height="150dp"
                        android:orientation="vertical"
                        android:background="@drawable/card">

                        <ImageView
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:layout_margin="5dp"
                            android:src="@drawable/lasagna"
                            android:contentDescription="@string/lasagna_alla_bolognese"
                            android:scaleType="centerCrop"
                            android:background="@drawable/rounded_corner"
                            android:clipToOutline="true"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textAlignment="center"
                            android:text="@string/lasagna"/>

                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/penne_arrabbiata"
                        android:layout_marginEnd="5dp"
                        android:layout_width="130dp"
                        android:layout_height="150dp"
                        android:orientation="vertical"
                        android:background="@drawable/card">

                        <ImageView
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:layout_margin="5dp"
                            android:src="@drawable/pennearrabbiata"
                            android:contentDescription="@string/pennearr_abbiata"
                            android:scaleType="centerCrop"
                            android:background="@drawable/rounded_corner"
                            android:clipToOutline="true"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textAlignment="center"
                            android:text="@string/penne_arrabbiata"/>

                    </LinearLayout>
                </LinearLayout>
            </HorizontalScrollView>


            <!-- side cards-->

            <TextView
                android:id="@+id/sideCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"

                android:layout_marginStart="20dp"
                android:text="@string/side_dishes"
                />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">


                <LinearLayout
                    android:id="@+id/side_layout"
                    android:padding="10dp"
                    android:layout_marginBottom="20dp"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/garlic_bread"
                        android:layout_marginEnd="5dp"
                        android:layout_width="130dp"
                        android:layout_height="150dp"
                        android:orientation="vertical"
                        android:background="@drawable/card">

                        <ImageView
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:layout_margin="5dp"
                            android:src="@drawable/garlicbread"
                            android:contentDescription="@string/garlic_bread"
                            android:scaleType="centerCrop"
                            android:background="@drawable/rounded_corner"
                            android:clipToOutline="true"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textAlignment="center"
                            android:text="@string/garlic_bread"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/stuffed_mushrooms"
                        android:layout_marginEnd="5dp"
                        android:layout_width="130dp"
                        android:layout_height="150dp"
                        android:orientation="vertical"
                        android:background="@drawable/card">

                        <ImageView
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:layout_margin="5dp"
                            android:src="@drawable/stuffedmushrooms"
                            android:contentDescription="@string/stuffed_mushroomss"
                            android:scaleType="centerCrop"
                            android:background="@drawable/rounded_corner"
                            android:clipToOutline="true"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textAlignment="center"
                            android:text="@string/stuffed_mushrooms"/>

                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/focaccia"
                        android:layout_marginEnd="5dp"
                        android:layout_width="130dp"
                        android:layout_height="150dp"
                        android:orientation="vertical"
                        android:background="@drawable/card">

                        <ImageView
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:layout_margin="5dp"
                            android:src="@drawable/focaccia"
                            android:contentDescription="@string/focaccia1"
                            android:scaleType="centerCrop"
                            android:background="@drawable/rounded_corner"
                            android:clipToOutline="true"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textAlignment="center"
                            android:text="@string/focaccia"/>

                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/fried_calamari"
                        android:layout_marginEnd="5dp"
                        android:layout_width="130dp"
                        android:layout_height="150dp"
                        android:orientation="vertical"
                        android:background="@drawable/card">

                        <ImageView
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:layout_margin="5dp"
                            android:src="@drawable/friedcalamari"
                            android:contentDescription="@string/fried_calamari1"
                            android:scaleType="centerCrop"
                            android:background="@drawable/rounded_corner"
                            android:clipToOutline="true"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textAlignment="center"
                            android:text="@string/fried_calamari"/>

                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/antipasto_platter"
                        android:layout_marginEnd="5dp"
                        android:layout_width="130dp"
                        android:layout_height="150dp"
                        android:orientation="vertical"
                        android:background="@drawable/card">

                        <ImageView
                            android:layout_width="120dp"
                            android:layout_height="120dp"
                            android:layout_margin="5dp"
                            android:src="@drawable/antipastoplatter"
                            android:contentDescription="@string/antipastoplatter1"
                            android:scaleType="centerCrop"
                            android:background="@drawable/rounded_corner"
                            android:clipToOutline="true"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textAlignment="center"
                            android:text="@string/antipasto_platter"/>

                    </LinearLayout>
                </LinearLayout>
            </HorizontalScrollView>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/card"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:padding="15dp">

        <LinearLayout
            android:layout_width="155dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/size"
                android:textColor="@color/text_color1"
                android:textSize="20sp" />
            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                tools:ignore="MissingConstraints,UselessParent"
                tools:layout_editor_absoluteX="116dp"
                tools:layout_editor_absoluteY="124dp">

                <RadioButton
                    android:id="@+id/smallPizza"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/smallbutton" />

                <RadioButton
                    android:id="@+id/mediumPizza"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/medium" />

                <RadioButton
                    android:id="@+id/largePizza"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/large" />

                <RadioButton
                    android:id="@+id/eLargePizza"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/extra_large" />
            </RadioGroup>

            <EditText
                android:id="@+id/pizzaQuantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:autofillHints="@string/number_of_pizza"
                android:ems="10"
                android:hint="@string/number_of_pizza"
                android:inputType="number" />

        </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                tools:ignore="NestedWeights">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/toppings"
                    android:textColor="@color/text_color1"
                    android:textSize="20sp" />

                <CheckBox
                    android:id="@+id/bananaPeppersTopping"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="@string/bacon" />

                <CheckBox
                    android:id="@+id/grilledChickenTopping"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="@string/grilled_chicken" />

                <CheckBox
                    android:id="@+id/GroundBeefTopping"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="@string/groundbeef" />

                <CheckBox
                    android:id="@+id/mushroomTopping"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="@string/mushroom" />

                <CheckBox
                    android:id="@+id/PepperoniTopping"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="@string/pepperoni1" />

                <CheckBox
                    android:id="@+id/extraCheeseTopping"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="@string/extra_cheese" />

            </LinearLayout>

        </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/card"
                android:layout_marginTop="40dp"
                android:padding="20dp">

                <TextView
                    android:id="@+id/totalPriceView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/total_price"/>
                <TextView
                    android:id="@+id/totalItemsView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/totalitems"/>

            </LinearLayout>
            <LinearLayout
                style="?android:attr/buttonBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                >

                <Button

                    android:id="@+id/clearButton"
                    style="?android:attr/buttonBarButtonStyle"
                    android:backgroundTint="@color/text_color1"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:text="@string/clear"
                    android:layout_margin="10dp">

                </Button>

                <Button
                    android:id="@+id/Checkout"
                    style="?android:attr/buttonBarButtonStyle"
                    android:backgroundTint="@color/checkout"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:text="@string/checkout"
                    android:layout_margin="10dp">

                </Button>

            </LinearLayout>


        </LinearLayout>

    </ScrollView>

</LinearLayout>