<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"


    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/mainbackground"
    android:tileMode="repeat"
    android:paddingBottom="30dp"
    tools:context=".MainActivity">
        <LinearLayout
            android:orientation="horizontal"
            android:id="@+id/header_layout"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/rounded_background">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="59dp"
                android:src="@drawable/header"
                android:contentDescription="@string/header_image"
                android:scaleType="fitCenter"
                android:layout_marginTop="6dp"
                />

        </LinearLayout>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:scrollbars="vertical"
            tools:ignore="ScrollViewCount"
            android:padding="15dp">

            <LinearLayout
                android:id="@+id/mainBody"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_color3"
                    android:layout_margin="20dp"
                    android:textSize="15sp"
                    android:gravity="center"
                    android:padding="0dp"
                    android:text="@string/hello_welcome_back"
                    android:visibility="visible" />



                <!-- Pizza card -->
                <TextView
                    android:id="@+id/pizzaCard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:textSize="20sp"
                    android:text="@string/pizza"
                    />

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none">


                    <LinearLayout
                        android:id="@+id/pizza_layout"
                        android:padding="10dp"
                        android:layout_marginBottom="20dp"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:id="@+id/margherita_pizza"
                            android:layout_marginEnd="5dp"
                            android:layout_width="130dp"
                            android:layout_height="150dp"
                            android:orientation="vertical"
                            android:clickable="true"
                            android:focusable="true"
                            android:background="@drawable/card">

                            <ImageView
                                android:layout_width="120dp"
                                android:layout_height="120dp"
                                android:layout_margin="5dp"
                                android:src="@drawable/margherita"
                                android:contentDescription="@string/margherita_pizza"
                                android:scaleType="centerCrop"
                                android:background="@drawable/rounded_corner"
                                android:clipToOutline="true" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:textColor="@color/text_color3"
                                android:textAlignment="center"
                                android:text="@string/margherita"/>

                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/pepperoni_pizza"
                            android:layout_marginEnd="5dp"
                            android:layout_width="130dp"
                            android:layout_height="150dp"
                            android:orientation="vertical"
                            android:clickable="true"
                            android:focusable="true"
                            android:background="@drawable/card">

                            <ImageView
                                android:layout_width="120dp"
                                android:layout_height="120dp"
                                android:layout_margin="5dp"
                                android:src="@drawable/pepperoni"
                                android:contentDescription="@string/pepperoni_pizza1"
                                android:scaleType="centerCrop"
                                android:background="@drawable/rounded_corner"
                                android:clipToOutline="true"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:textAlignment="center"
                                android:text="@string/pepperoni"/>

                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/quattro_formaggi"
                            android:layout_marginEnd="5dp"
                            android:layout_width="130dp"
                            android:layout_height="150dp"
                            android:orientation="vertical"
                            android:clickable="true"
                            android:focusable="true"
                            android:background="@drawable/card">

                            <ImageView
                                android:layout_width="120dp"
                                android:layout_height="120dp"
                                android:layout_margin="5dp"
                                android:src="@drawable/quattroformaggi"
                                android:contentDescription="@string/quattro_formaggi_pizza"
                                android:scaleType="centerCrop"
                                android:background="@drawable/rounded_corner"
                                android:clipToOutline="true"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:textAlignment="center"
                                android:text="@string/quattro_formaggi"/>

                        </LinearLayout>
                        <LinearLayout
                            android:id="@+id/vegetariana"
                            android:layout_marginEnd="5dp"
                            android:layout_width="130dp"
                            android:layout_height="150dp"
                            android:orientation="vertical"
                            android:clickable="true"
                            android:focusable="true"
                            android:background="@drawable/card">

                            <ImageView
                                android:layout_width="120dp"
                                android:layout_height="120dp"
                                android:layout_margin="5dp"
                                android:src="@drawable/vegetariana"
                                android:contentDescription="@string/vegetariana_pizza"
                                android:scaleType="centerCrop"
                                android:background="@drawable/rounded_corner"
                                android:clipToOutline="true"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:textAlignment="center"
                                android:text="@string/vegetariana"/>

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/cheese"
                            android:layout_marginEnd="5dp"
                            android:layout_width="130dp"
                            android:layout_height="150dp"
                            android:orientation="vertical"
                            android:clickable="true"
                            android:focusable="true"
                            android:background="@drawable/card">

                            <ImageView
                                android:layout_width="120dp"
                                android:layout_height="120dp"
                                android:layout_margin="5dp"
                                android:src="@drawable/cheese"
                                android:contentDescription="@string/cheese_pizza"
                                android:scaleType="centerCrop"
                                android:background="@drawable/rounded_corner"
                                android:clipToOutline="true"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:textAlignment="center"
                                android:text="@string/cheese"/>

                        </LinearLayout>

                    </LinearLayout>
                </HorizontalScrollView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:background="@drawable/card"
                    android:baselineAligned="false"
                    android:orientation="horizontal"
                    android:padding="15dp">

                    <LinearLayout
                        android:layout_width="155dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/selectedPizzaDisplay"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/selected_pizza"
                            android:layout_marginBottom="10dp"
                            android:textColor="@color/text_color3"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/size"
                            android:textColor="@color/text_color1"
                            android:textSize="20sp" />
                        <RadioGroup
                            android:id="@+id/radioForPizzaSize"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="20dp"
                            tools:layout_editor_absoluteX="116dp"
                            tools:layout_editor_absoluteY="124dp">

                            <RadioButton
                                android:id="@+id/smallPizza"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:checked="true"
                                android:text="@string/smallbutton" />

                            <RadioButton
                                android:id="@+id/mediumPizza"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/medium_n_3_99" />

                            <RadioButton
                                android:id="@+id/largePizza"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/large_n_5_99" />

                            <RadioButton
                                android:id="@+id/eLargePizza"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/extra_large_n_7_99" />
                        </RadioGroup>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:padding="8dp">
                            <Button
                                android:id="@+id/decreaseQuantity"
                                android:layout_width="30dp"
                                android:layout_height="26dp"
                                android:textSize="14sp"
                                android:text="@string/decrease"
                                android:layout_marginEnd="8dp"
                               android:minWidth="0dp"
                                android:minHeight="0dp"
                                android:padding="0dp"
                                android:backgroundTint="@color/text_color2"/>

                            <EditText
                                android:id="@+id/pizzaQuantity"
                                android:layout_width="50dp"
                                android:layout_height="36dp"
                                android:layout_gravity="center"
                                android:autofillHints="@string/number_of_pizza"
                                android:hint="@string/number_of_pizza"
                                android:textSize="11sp"
                                android:textColorHint="@color/text_color3"
                                android:inputType="number"
                                android:backgroundTint="@color/text_color2"/>
                            <Button
                                android:id="@+id/increaseQuantity"
                                android:layout_width="30dp"
                                android:layout_height="26dp"
                                android:textSize="14sp"
                                android:text="@string/increase"
                                android:layout_marginStart="8dp"
                                android:minWidth="0dp"
                                android:minHeight="0dp"
                                android:padding="0dp"
                                android:backgroundTint="@color/text_color2"/>
                        </LinearLayout>



                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        tools:ignore="NestedWeights">
                        <TextView
                            android:id="@+id/selectedPizzaPriceDis"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/price"
                            android:layout_marginBottom="10dp"
                            android:textColor="@color/text_color3"/>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/toppings"
                            android:textColor="@color/text_color1"
                            android:textSize="20sp" />

                        <CheckBox
                            android:id="@+id/baconTopping"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:text="@string/bacon" />

                        <CheckBox
                            android:id="@+id/grilledChickenTopping"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:text="@string/grilled_chicken" />

                        <CheckBox
                            android:id="@+id/groundBeefTopping"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:text="@string/groundbeef" />

                        <CheckBox
                            android:id="@+id/mushroomTopping"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:text="@string/mushroom" />

                        <CheckBox
                            android:id="@+id/pepperoniTopping"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:text="@string/pepperoni1" />

                        <CheckBox
                            android:id="@+id/extraCheeseTopping"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="5dp"
                            android:text="@string/extra_cheese" />

                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/card"
                    android:layout_marginTop="40dp"
                    android:padding="20dp">

                    <TextView
                        android:id="@+id/totalItemsView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/totalitems"/>

                    <TextView
                        android:id="@+id/totalPriceView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="@string/total_price"/>
                </LinearLayout>
                <LinearLayout
                    style="?android:attr/buttonBarStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    >

                    <Button

                        android:id="@+id/clearButton"
                        style="?android:attr/buttonBarButtonStyle"
                        android:backgroundTint="@color/text_color1"
                        android:layout_width="150dp"
                        android:layout_height="50dp"
                        android:text="@string/clear"
                        android:layout_margin="10dp">

                    </Button>

                    <Button
                        android:id="@+id/Checkout"
                        style="?android:attr/buttonBarButtonStyle"
                        android:backgroundTint="@color/checkout"
                        android:layout_width="150dp"
                        android:layout_height="50dp"
                        android:text="@string/checkout"
                        android:layout_margin="10dp">

                    </Button>

                </LinearLayout>


            </LinearLayout>

        </ScrollView>

</LinearLayout>


